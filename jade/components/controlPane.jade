aside.control-pane#user-main-control
	section.control-pane-mainSection
		section.control-pane-user
			img(src='https://instagram.feoh3-1.fna.fbcdn.net/t51.2885-19/s150x150/16908563_725695954277996_8202653276341010432_a.jpg').control-pane-userPicture
			section.control-pane-userinfo
				h4.control-pane-username Juan Manuel Sánchez
				a(href='#').control-pane-userid @juanmsl_pk
			a(href='#').control-pane-configIcon.ilm-configuration
			i.control-pane-menuIcon.ilm-menu#toggle-user-main-control(data-target='#user-main-control')
			i.control-pane-notificationsIcon.ilm-menu#toggle-notifications(data-target='#notifications')
